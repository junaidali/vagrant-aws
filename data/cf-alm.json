{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates the ALM AWS Infrastructure. It includes VPC, Subnets, RDS Database, EC2 Instances running in an ASG for Websites, ELB for website front end",
  "Parameters": {
    "Environment": {
      "Description": "The type of environment provisioned (prod, dev, test, uat)",
      "Type": "String",
      "Default": "dev"
    },
    "KeyName": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access into the servers",
      "Type": "String"
    },
    "ADDNSName": {
      "Description": "The SimpleAD DNS name",
      "Type": "String",
      "Default": "alm.local"
    },
    "ADRootPassword": {
      "Description": "The SimpleAD Administrator account password",
      "Type": "String",
      "Default": "P@ssw0rd"
    },
    "AZ1": {
      "Description": "The Primary AvailabilityZone",
      "Type": "String",
      "Default": "us-east-1a"
    },
    "AZ2": {
      "Description": "The Secondary AvailabilityZone",
      "Type": "String",
      "Default": "us-east-1b"
    },
    "PacsClientInstanceType": {
      "Description": "The instance type for the PACS client image",
      "Type": "String",
      "Default": "t2.nano"
    }
  },
  "Resources": {
    "ALMVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Fn::FindInMap": [
            "EnvironmentMap",
            { "Ref": "Environment" },
            "vpcsubnet"
          ]
        },
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "InstanceTenancy": "default",
        "Tags":  [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  "ALMVPC",
                  { "Ref": "Environment"}
                ]
              ]
            }
          }
        ]
      }
    },
    "PrivateSubnetAZ1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AZ1"
        },
        "CidrBlock": {
          "Fn::FindInMap": [
            "EnvironmentMap",
            { "Ref": "Environment" },
            "privatesubnetaz1"
          ]
        },
        "VpcId": {
          "Ref": "ALMVPC"
        },
        "Tags":[
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  "private-subnet-az1",
                  { "Ref": "Environment"}
                ]
              ]
            }
          }
        ]
      }
    },
    "PublicSubnetAZ1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AZ1"
        },
        "CidrBlock": "10.0.2.0/24",
        "VpcId": {
          "Ref": "ALMVPC"
        },
        "Tags": [ { "Key": "Name", "Value": "public-subnet-az1" }]
      }
    },
    "PrivateSubnetAZ2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AZ2"
        },
        "CidrBlock": "10.0.3.0/24",
        "VpcId": {
          "Ref": "ALMVPC"
        },
        "Tags": [ { "Key": "Name", "Value": "private-subnet-az2" }]
      }
    },
    "PublicSubnetAZ2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AZ2"
        },
        "CidrBlock": "10.0.4.0/24",
        "VpcId": {
          "Ref": "ALMVPC"
        },
        "Tags": [ { "Key": "Name", "Value": "public-subnet-az2" }]
      }
    },
    "InternetGateway": {
      "Type" : "AWS::EC2::InternetGateway",
      "Properties" : {
        "Tags": [ { "Key": "Name", "Value": "default-internet-gateway" }]
      }
    },
    "InternetGatewayAttachment": {
      "Type" : "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "InternetGatewayId": { "Ref": "InternetGateway" },
        "VpcId": { "Ref": "ALMVPC" }
      }
    },
    "PublicRouteTableAZ1": {
      "Type" : "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "ALMVPC" },
        "Tags": [ { "Key": "Name", "Value": "public-route-table-az1" }]
      }
    },
    "PublicRouteTableAZ2": {
      "Type" : "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "ALMVPC" },
        "Tags": [ { "Key": "Name", "Value": "public-route-table-az2" }]
      }
    },
    "PrivateRouteTableAZ1": {
      "Type" : "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "ALMVPC" },
        "Tags": [ { "Key": "Name", "Value": "private-route-table-az1" }]
      }
    },
    "PrivateRouteTableAZ2": {
      "Type" : "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "ALMVPC" },
        "Tags": [ { "Key": "Name", "Value": "private-route-table-az2" }]
      }
    },
    "InternetRouteAZ1": {
      "Type" : "AWS::EC2::Route",
      "DependsOn": "InternetGateway",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTableAZ1" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Ref": "InternetGateway" }
      }
    },
    "InternetRouteAZ2": {
      "Type" : "AWS::EC2::Route",
      "DependsOn": "InternetGateway",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTableAZ2" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Ref": "InternetGateway" }
      }
    },
    "SubnetRouteTableAssociationPublicAZ1": {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTableAZ1" },
        "SubnetId": { "Ref": "PublicSubnetAZ1" }
      }
    },
    "SubnetRouteTableAssociationPublicAZ2": {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTableAZ2" },
        "SubnetId": { "Ref": "PublicSubnetAZ2" }
      }
    },
    "SubnetRouteTableAssociationPrivateAZ1": {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": { "Ref": "PrivateRouteTableAZ1" },
        "SubnetId": { "Ref": "PrivateSubnetAZ1" }
      }
    },
    "SubnetRouteTableAssociationPrivateAZ2": {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": { "Ref": "PrivateRouteTableAZ2" },
        "SubnetId": { "Ref": "PrivateSubnetAZ2" }
      }
    }
  },
  "Mappings": {
    "EnvironmentMap": {
      "dev": { "vpcsubnet": "10.0.0.0/16", "publicsubnetaz1": "10.0.1.0/24", "privatesubnetaz1": "10.0.2.0/24", "publicsubnetaz2": "10.0.3.0/24", "privatesubnetaz2": "10.0.4.0/24" },
      "test": { "vpcsubnet": "10.1.0.0/16", "publicsubnetaz1": "10.1.1.0/24", "privatesubnetaz1": "10.1.2.0/24", "publicsubnetaz2": "10.1.3.0/24", "privatesubnetaz2": "10.1.4.0/24" },
      "uat": { "vpcsubnet": "10.2.0.0/16", "publicsubnetaz1": "10.2.1.0/24", "privatesubnetaz1": "10.2.2.0/24", "publicsubnetaz2": "10.2.3.0/24", "privatesubnetaz2": "10.2.4.0/24" },
      "prod": { "vpcsubnet": "10.3.0.0/16", "publicsubnetaz1": "10.3.1.0/24", "privatesubnetaz1": "10.3.2.0/24", "publicsubnetaz2": "10.3.3.0/24", "privatesubnetaz2": "10.3.4.0/24" }
    },
    "AWSRegion2Map": {
      "us-east-1a": { "win2k16": "ami-050202fb72f001b47" },
      "us-east-1b": { "win2k16": " ami-028779930ada5200c" }
    }
  },
  "Outputs": {}
}
